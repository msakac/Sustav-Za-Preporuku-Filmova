<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link
      href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
      rel="stylesheet"
      id="bootstrap-css"
    />
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/navigation.css" type="text/css" />
    <link rel="stylesheet" href="/css/card.css" type="text/css" />
    <script src="/javascript/navigation.js"></script>
    <title>Kategorije</title>
  </head>
  <body class="dark">
    <%- include('../_navigacija') %>
      <div class="container py-4 w-50">
        <a href="/kategorije/dodaj" class="btn btn-success" style="float: right">Nova kategorija</a>
        <h1 class="h1 text-center" id="pageHeaderTitle">KATEGORIJE</h1>
        <% kategorije.forEach(kategorija=> { %>
            <div class="card mt-4">
                <div class="card-body" style="background-color:#424242 ;">
                    <h4 class="card-title">
                        <%= kategorija.naziv %>
                    </h4>
                    <div class="card-text mb-2">
                        <%=kategorija.opis%>
                    </div>
                    <a href="/kategorije/uredi/<%=kategorija.id%>" class="btn btn-info">Uredi</a>
                    <form action="/kategorije/<%=kategorija.id%>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Obri≈°i</button>
                    </form>
                </div>

            </div>
            <%})%>
      </div>
  </body>
</html>
